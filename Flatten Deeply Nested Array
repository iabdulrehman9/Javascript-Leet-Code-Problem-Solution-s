/**
 * @param {Array} arr
 * @param {number} depth
 * @return {Array}
 */
var flat = function (arr, n) {
    if(n === 0){
        return arr
    }else{
        const output = []
        arr.forEach((ele)=>{
            if(Array.isArray(ele)){
                output.push(...flat(ele,n-1))
            }else{
                output.push(ele)
            }
        })
        return output
    }
};
